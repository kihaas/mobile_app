<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Piterpen" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="CategoryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">#5B3A29</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/circle_background</item>
    </style>

    <style name="CategoryButton.Unselected" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">#EAEAEA</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CategoryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">#5B3A29</item> <!-- коричневый -->
        <item name="android:textColor">#FFFFFF</item> <!-- белый -->
        <item name="android:minHeight">40dp</item>
    </style>

</resources>